generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  dailyLogs DailyLog[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DailyLog {
  id String @id @default(uuid())
  user User @relation(fields: [userId], references: [id] )
  userId String 
  date DateTime
  startTime String  
  endTime String
  totalValue Decimal @db.Decimal(10,2)
  status LogStatus @default(NAO_PAGA)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, date])
  @@unique([userId, date])
}

enum LogStatus {
  PAGA
  NAO_PAGA
}